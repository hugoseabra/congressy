# nginx-app.conf

# the upstream component nginx needs to connect to
upstream app {
    # Load balance algorithm; empty for round robin, which is the default
    least_conn;
    keepalive 64;
    server unix:///var/run/cgsy.sock; # for a file socket
}

server {
    listen  80 default_server;
    charset utf-8;

    server_name {{ DOMAIN }};
    {% if FORCE_HTTPS %}
    if ($http_x_forwarded_proto != "https") {
      rewrite ^(.*)$ https://$server_name$REQUEST_URI permanent;
    }
    {% endif %}
    location = /favicon.ico { access_log off; log_not_found off; }
    location /media  {
        alias /var/www/cgsy/media;
    }

    location /static  {
        alias /var/www/cgsy/static;
    }

    location / {
        # the uwsgi_params file you installed
        include         /var/www/cgsy/conf/deploy/uwsgi_params;
        uwsgi_buffers   256 16k;

        # https://github.com/dockerfile/nginx/issues/4
        # Override temp file locations
        uwsgi_temp_path /tmp/nginx/uwsgi;

        proxy_redirect          off;
        proxy_buffering         off;
        proxy_request_buffering off;

        proxy_set_header   Host             $http_host;
        proxy_set_header   X-Real-IP        $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Host $server_name;

        if (!-f $request_filename) {
            uwsgi_pass app;
            break;
        }
    }
}