#!/usr/bin/env bash

S3CMD='/usr/local/bin/s3cmd'
DIRECTORY='/code/media/'

# Runs in-sync: configuration state has priority of outsite if bucket exists
insync() {
    "$S3CMD" sync s3://{{ BUCKET_NAME }}/ "$DIRECTORY"
}

if [ ! -d "$DIRECTORY" ]; then
    mkdir -p "$DIRECTORY"
fi

if [ "$(ls -A "$DIRECTORY")" ]; then
    insync
fi
